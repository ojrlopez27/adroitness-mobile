<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
	android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
	    <TextView 
		    android:id="@+id/news_rank"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="12sp"
		    android:fontFamily="sans-serif-condensed"
		    android:layout_gravity="center|center_vertical"		
		    android:gravity="center"		    
		    android:paddingLeft="5dp"
		    android:paddingRight="5dp"
		    android:textColor="#fff"		    
		    android:minHeight="?android:attr/listPreferredItemHeightSmall"
		    android:text="1"/>
		<TextView 
		    android:id="@+id/news_title"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="18sp"
		    android:textStyle="bold"
		    android:gravity="center_vertical"		    
		    android:paddingLeft="5dp"
		    android:paddingRight="5dp"
		    android:textColor="#fff"
		    android:background="?android:attr/activatedBackgroundIndicator"
		    android:minHeight="?android:attr/listPreferredItemHeightSmall"
		    android:text="title"/>		
	</LinearLayout>
	<RelativeLayout
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="5dip">
		 <TextView 
			    android:id="@+id/news_reason"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:fontFamily="sans-serif-light" 			    
			    android:textSize="13sp"			
			    android:gravity="center"
			    android:paddingTop="1dp"	
			    android:paddingLeft="5dp"
			    android:paddingRight="5dp"
			    android:textColor="#fff"
			    android:background="?android:attr/activatedBackgroundIndicator"			    
			    android:text="reason"/>
		 <TextView 
			    android:id="@+id/news_publisher"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_toLeftOf="@+id/news_score"
			    android:textSize="14sp"
			    android:fontFamily="sans-serif-thin"  
			    android:textStyle="bold|italic"			    			    
			    android:gravity="center_vertical"		    
			    android:paddingLeft="5dp"
			    android:paddingRight="5dp"
			    android:textColor="#fff"
			    android:background="?android:attr/activatedBackgroundIndicator"			    
			    android:text="source"/>
	    <TextView 
			    android:id="@+id/news_score"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentEnd="true"
			    android:textSize="14sp"
			    android:gravity="center_vertical"		    
			    android:paddingLeft="5dp"
			    android:paddingRight="5dp"
			    android:textColor="#fff"
			    android:background="?android:attr/activatedBackgroundIndicator"			   
			    android:text="score"/>
	 </RelativeLayout>
	 <LinearLayout
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
         <ImageView
             android:id="@+id/news_img"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="top"
             android:gravity="center_vertical"
             />
		<TextView 
		    android:id="@+id/news_summary"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		   	android:textSize="14sp"
		   	android:fontFamily="sans-serif-light" 
		   	android:textStyle="italic"
		    android:gravity="center_vertical"
		    android:layout_alignParentRight="true"		   
		    android:padding="5dp"
		    android:textColor="#fff"
		    android:background="?android:attr/activatedBackgroundIndicator"
		    android:text="summary"/>
	</LinearLayout>
	<TextView
        android:id="@+id/news_feat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:textColor="#fff"
        android:background="?android:attr/activatedBackgroundIndicator"
        android:text="feat"
        android:layout_margin="5dip"/>
	<TextView
        android:id="@+id/news_feat2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#fff"
        android:background="?android:attr/activatedBackgroundIndicator"
        android:text="feat2"
        android:layout_margin="5dip"/>
    <TextView
        android:id="@+id/news_recommendation1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#fff"
        android:background="?android:attr/activatedBackgroundIndicator"
        android:text="Recommended by Emma's algoritmh:"
        android:layout_margin="5dip"/>
    <TextView
        android:id="@+id/news_recommendation2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#fff"
        android:background="?android:attr/activatedBackgroundIndicator"
        android:text="Recommended by William's algoritmh:"
        android:layout_margin="5dip"/>
    <EditText
        android:id="@+id/news_comments"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#fff"
        android:background="?android:attr/activatedBackgroundIndicator"
        android:text="@string/news_write_comments"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:focusable="true"
        android:inputType="textMultiLine|textAutoComplete|textAutoCorrect"
        android:singleLine="false"
        android:minLines="1"
        android:maxLines="20"
        android:lines="20"
        android:scrollHorizontally="false"
        android:scrollbars="vertical"
        android:imeOptions="normal"
        android:imeActionId="100"
        android:layout_margin="5dip"/>
	<LinearLayout
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginBottom="7dp">	
		<ImageButton
            android:id="@+id/news_btnShareFb"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="7dp"
            android:background="@null"
            android:padding="0dp"
            android:src="@drawable/news_btn_share_facebook_white_normal" />
		<ImageButton
            android:id="@+id/news_btnShareTwitter"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="7dp"
            android:background="@null"
            android:padding="0dp"
            android:src="@drawable/news_btn_share_twitter_white_normal" />
		<ImageButton
            android:id="@+id/news_btnShareTumblr"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="7dp"
            android:background="@null"
            android:padding="0dp"
            android:src="@drawable/news_btn_share_tumblr_white_normal" />
		<ImageButton
            android:id="@+id/news_btnShareMore"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="7dp"
            android:background="@null"
            android:padding="0dp"
            android:src="@drawable/news_btn_share_more_white_normal" />
        <ImageButton
            android:id="@+id/news_btnLike"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="7dp"
            android:background="@null"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/news_btn_like" />
        <ImageButton
            android:id="@+id/news_btnDislike"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="7dp"
            android:background="@null"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/news_btn_dislike" />
	</LinearLayout>	
</LinearLayout>